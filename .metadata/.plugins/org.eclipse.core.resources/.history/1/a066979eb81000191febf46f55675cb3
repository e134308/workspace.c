#include <stdlib.h>
#include <stdio.h>
#include <windows.h>

int main(void){

	printf("====================\n");
	printf("Name: my_program_001\n");
	printf("Date: 2019 01 05\n");
	printf("====================\n");

	float farh, celsius;
	int lower,upper,step;

	lower = 0;
	upper = 300;
	step = 20;

	farh = lower;

	printf("%8s\t%8s\n","farh","celsius");

	while(farh<=upper){
	celsius = 5*(farh-32)/9;
	printf("%8.0f\t%8.2f\n",farh,celsius);
	farh=farh+step;
	}


	getchar();

	return 0;
}
